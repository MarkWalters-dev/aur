post_install() {
    echo "Creating symbolic link: /usr/share/biyi/biyi -> /usr/bin/biyi"
    ln -s /usr/share/biyi/biyi /usr/bin/biyi
    chmod a+x /usr/bin/biyi
    echo "Done."
}

post_remove() {
    echo "Removing symbolic link: /usr/bin/biyi -> /usr/share/biyi/biyi"
    rm /usr/bin/biyi
    echo "Done."
}
