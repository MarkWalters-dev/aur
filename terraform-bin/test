#! /usr/bin/bash

makepkg --printsrcinfo > .SRCINFO
makepkg --check > /dev/null 2>&1

#makepkg -fg
echo "Updating Checksum" 
sed -i "/sha256sums/c$(makepkg -fg)" ./PKGBUILD

echo "Testing Again!"
makepkg --printsrcinfo > .SRCINFO
makepkg --check --clean build -f

# cleanup
rm -f *.tar.zst
rm -f *.zip
