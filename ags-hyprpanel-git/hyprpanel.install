post_install() {
  echo -e "\n=================================================="
  echo -e "HyprPanel is installed!"
  echo -e "To configure ags and backup existing config run:\n"
  echo -e "mv $HOME/.config/ags $HOME/.config/ags.bkup 2>/dev/null"
  echo -e "ln -s /usr/share/HyprPanel $HOME/.config/ags"
  echo -e "==================================================\n"
}
