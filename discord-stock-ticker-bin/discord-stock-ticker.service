[Unit]
Description=discord-stock-ticker
Wants=basic.target
After=basic.target network.target
Before=sshd.service

[Service]
ExecReload=/bin/kill -HUP $MAINPID
ExecStart=/usr/bin/discord-stock-ticker
Restart=always
StandardOutput=append:/var/log/discord-stock-ticker/stdout.log
StandardError=append:/var/log/discord-stock-ticker/stderr.log

[Install]
WantedBy=multi-user.target
