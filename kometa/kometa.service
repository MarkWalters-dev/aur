# Be sure to use `systemctl edit kometa` to modify this service with an override.conf because
# direct changes will be overwritten by package updates.

[Unit]
Description=Kometa daemon
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
User=kometa
Group=kometa
SyslogIdentifier=kometa
ExecStart=/usr/bin/python /usr/lib/kometa/kometa.py --config /var/lib/kometa/config.yml

[Install]
WantedBy=multi-user.target
