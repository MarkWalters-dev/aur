provides=('snazy')
conflicts=('snazy')

source_aarch64=("${pkgname}_${pkgver}_aarch64.tar.gz::https://github.com/chmouel/snazy/releases/download/0.54.0/snazy-v0.54.0-linux-arm64.tar.gz")
sha256sums_aarch64=('2ca47046365cf122589dea0b8c0167a9e1a98dc0e0de060d399fc38d9a2fa5c0')

source_x86_64=("${pkgname}_${pkgver}_x86_64.tar.gz::https://github.com/chmouel/snazy/releases/download/0.54.0/snazy-v0.54.0-linux-amd64.tar.gz")
