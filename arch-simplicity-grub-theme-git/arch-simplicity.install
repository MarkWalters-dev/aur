post_install() {
  echo '==> To select the arch-simplicity theme you must:'
  echo '==>  1. Open the file "/etc/default/grub" and inside it update the variable GRUB_THEME="/boot/grub/themes/arch-simplicity/theme.txt"'
  echo '==>  2. Update the grub config by running "sudo grub-mkconfig -o /boot/grub/grub.cfg"'
}

post_remove() {
  echo '==> Make sure you selected a different theme and updated your grub config.'
}
